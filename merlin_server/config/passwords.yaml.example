# Example passwords configuration file
# Copy this file to passwords.yaml and fill in your actual values
# 
# Use this file to store passwords to services that your server uses. When
# the server starts, the passwords will be automatically loaded and can be
# accessed from the `session.passwords` field. If you don't have access to a
# session object, passwords can also be accessed from
# `Serverpod.instance.passwords`. You can provide different passwords for
# different run configurations. If you want the same password for any
# configuration used, place it under `shared`.
#
# Note that passwords.yaml should not be under version control. Store it in a safe
# place.

# Save passwords used across all configurations here.
shared:
  mySharedPassword: 'my password'

# These are passwords used when running the server locally in development mode
development:
  database: 'your_postgres_password_here'
  redis: 'your_redis_password_here'

  # The service secret is used to communicate between servers and to access the
  # service protocol.
  serviceSecret: 'your-service-secret-here'

  emailSecretHashPepper: 'your-email-secret-hash-pepper-here'
  jwtHmacSha512PrivateKey: 'your-jwt-hmac-sha512-private-key-here'
  jwtRefreshTokenHashPepper: 'your-jwt-refresh-token-hash-pepper-here'
  # serverSideSessionKeyHashPepper: 'your-server-side-session-key-hash-pepper-here'
  
  # Google OAuth redirect URI (must match your Google Cloud Console configuration)
  googleOAuthRedirectUri: 'http://localhost:8082/auth/google/callback'
  
  # Google OAuth credentials
  # Get these from: https://console.cloud.google.com/apis/credentials
  # Create OAuth 2.0 Client ID credentials (Web application type)
  googleOAuthClientId: 'your-google-oauth-client-id.apps.googleusercontent.com'
  googleOAuthClientSecret: 'your-google-oauth-client-secret'
  
  # Google Gemini AI API Key
  # Get from: https://makersuite.google.com/app/apikey or
  # https://aistudio.google.com/app/apikey
  geminiApiKey: 'your-gemini-api-key-here'

test:
  database: 'your_test_postgres_password_here'
  redis: 'your_test_redis_password_here'

  emailSecretHashPepper: 'your-test-email-secret-hash-pepper-here'
  jwtHmacSha512PrivateKey: 'your-test-jwt-hmac-sha512-private-key-here'
  jwtRefreshTokenHashPepper: 'your-test-jwt-refresh-token-hash-pepper-here'
  # serverSideSessionKeyHashPepper: 'your-test-server-side-session-key-hash-pepper-here'

# Passwords used in your staging environment if you use one. The default setup
# use a password for Redis.
staging:
  database: 'your-staging-database-password-here'
  serviceSecret: 'your-staging-service-secret-here'

  emailSecretHashPepper: 'your-staging-email-secret-hash-pepper-here'
  jwtHmacSha512PrivateKey: 'your-staging-jwt-hmac-sha512-private-key-here'
  jwtRefreshTokenHashPepper: 'your-staging-jwt-refresh-token-hash-pepper-here'
  # serverSideSessionKeyHashPepper: 'your-staging-server-side-session-key-hash-pepper-here'

# Passwords used in production mode
production:
  database: 'your-production-database-password-here'
  serviceSecret: 'your-production-service-secret-here'

  emailSecretHashPepper: 'your-production-email-secret-hash-pepper-here'
  jwtHmacSha512PrivateKey: 'your-production-jwt-hmac-sha512-private-key-here'
  jwtRefreshTokenHashPepper: 'your-production-jwt-refresh-token-hash-pepper-here'
  # serverSideSessionKeyHashPepper: 'your-production-server-side-session-key-hash-pepper-here'